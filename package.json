{
  "name": "hue-ui",
  "private": true,
  "workspaces": [
    "src/*",
    "sandbox/*"
  ],
  "version": "0.0.1",
  "description": "Hue UI Components Monorepo",
  "main": "index.js",
  "author": "Daniel Kjellid <daniel@kjellid.no>",
  "license": "MIT",
  "scripts": {
    "build": "esno bin/build",
    "build:all": "npm run build all",
    "eslint:check": "eslint --ext ts,tsx,js,jsx .",
    "eslint:fix": "eslint --ext ts,tsx,js,jsx . --fix",
    "import-sort:check": "import-sort --list-different \"src/**/src/**/*.{js,jsx,ts,tsx}\"",
    "import-sort:fix": "import-sort --write \"src/**/src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:check": "prettier --check \"src/**/src/**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "prettier:fix": "prettier --write \"src/**/src/**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "sandbox": "vite",
    "syncpack:check": "syncpack list-mismatches",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "tsc:check": "tsc --noEmit --skipLibCheck",
    "storybook": "storybook dev -p 6006 -c config/storybook",
    "storybook:build": "storybook build -c config/storybook"
  },
  "resolutions": {
    "@types/react": "^18.2.7"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@storybook/addon-essentials": "^7.0.18",
    "@storybook/addon-interactions": "^7.0.18",
    "@storybook/addon-links": "^7.0.18",
    "@storybook/blocks": "^7.0.18",
    "@storybook/react": "^7.0.18",
    "@storybook/react-vite": "^7.0.18",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-tailwindcss": "^3.12.0",
    "esno": "^0.16.3",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jsdom": "^22.1.0",
    "lucide-react": "^0.242.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prop-types": "^15.8.1",
    "rollup": "^3.23.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^6.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "storybook": "^7.0.18",
    "syncpack": "^9.8.6",
    "tailwind-merge": "^1.13.1",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vitest": "^0.31.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
